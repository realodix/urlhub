    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Tests] PHPUnit",
            "type": "shell",
            "command": "php artisan icons:cache && ./vendor/bin/phpunit && php artisan icons:clear",
            "problemMatcher": []
        },
        {
            "label": "[Tests] PHPUnit (coverage-html)",
            "type": "shell",
            "command": "php artisan icons:cache && ./vendor/bin/phpunit --coverage-html .logs/coverage-html && php artisan icons:clear",
            "problemMatcher": []
        },
        {
            "label": "[CS] PHP CS Fixer",
            "type": "shell",
            "command": "./vendor/bin/php-cs-fixer fix -v",
            "problemMatcher": []
        },
        {
            "label": "[Icons] Cache",
            "type": "shell",
            "command": "php artisan icons:cache",
            "problemMatcher": []
        },
        {
            "label": "[Icons] Cache clear",
            "type": "shell",
            "command": "php artisan icons:clear",
            "problemMatcher": []
        }
    ]
}
